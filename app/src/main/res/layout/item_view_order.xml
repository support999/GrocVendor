<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <View-->
<!--        android:layout_width="5dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="#6A17FF">-->

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rakesh Sharma"
            android:textColor="#222222"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="20:45" />

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="order Id : "
            android:layout_below="@id/user_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp" />
        <TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="190453"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp"
            android:textColor="#222222"
            android:textStyle="bold"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item :"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="15dp"
            android:textColor="#222222"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="65dp" />

        <TextView
            android:id="@+id/txt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Ammount"
            android:textSize="14dp"
            android:layout_gravity="end"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp" />
        <TextView
            android:id="@+id/amount_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹ 243"
            android:textColor="#222222"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"/>

        <Button
            android:id="@+id/view_order_btn"
            android:layout_width="138dp"
            android:layout_height="36dp"
            android:background="@drawable/border_btn_bg"
            android:text="View Order"
            android:textAllCaps="false"
            android:textColor="#FF0606"
            android:layout_gravity="end"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp"/>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

<!--    </View>-->
</androidx.cardview.widget.CardView>